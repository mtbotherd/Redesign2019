<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Metro Transit - Website Design Guide</title>
	<link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
	<!-- build:css css/app.min.css -->
	<link rel="stylesheet" href="css/app.css" />
	<!-- endbuild -->
</head>

<body>

	<!-- Begin Header -->
	<partial src="partials/header.html" />
	<!-- End Header -->

	<!-- Begin Main Content -->
	<section id="mainContent">
		<div id="homePage">
			<div class="hero-bg pt-3 pt-md-0 pt-lg-3">
				<div class="container">
					<div id="findSchedulesByRoute" class="d-none d-md-block">
						<div class="row justify-content-md-center">
							<div class="col-md-8 col-lg-6 mt-2 mt-md-4">
								<div class="input-group">
									<input type="search" id="schedulesByRoute" class="form-control form-control-lg"
										placeholder="Find schedules by route" aria-label="Find schedules by route"
										aria-describedby="searchRoutesButton">
										<label for="stopNumber" class="sr-only">Enter stop number</label>
									<div class="input-group-append">
										<button id="searchRoutesButton" type="search" class="btn btn-primary">
											<span class="sr-only">Search button</span>
											<svg class="icon icon-search-gray"><use xlink:href="symbol-defs.svg#icon-search-gray"></use></svg>
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="cta-link-white mt-md-2 mt-xl-4">
						<a class="d-inline-flex nav-link" href="schedules-maps">
							<span class="link-text"></span>View all Schedules &amp; Maps</span>
							<svg class="icon icon-arrow-right-white"><use xlink:href="symbol-defs.svg#icon-arrow-right-white"></use></svg>
						</a>
					</div>
				</div>
			</div>
			<div id="homeContent">
				<main class="section pt-0 pb-4 pb-md-5">
					<div class="container">
						<!-- Start trip tools tabs -->
						<div id="tripToolsTabs" class="trip-tools-tabs">
						    <div class="card">
						        <div class="tabs">
						            <ul class="nav nav-tabs" role="tab-list">
						                <li class="nav-item mr-2" role="presentation">
						                    <a id="tpTab" class="nav-link active p-md-3" data-toggle="tab" href="#tripPlanner" role="tab" aria-controls="tripPlanner" aria-selected="true">
						                            <svg class="icon icon-trip-planner-color mx-auto active"><use xlink:href="symbol-defs.svg#icon-trip-planner-color"></use></svg>
						                            <svg class="icon icon-trip-planner-white mx-auto inactive"><use xlink:href="symbol-defs.svg#icon-trip-planner-white"></use></svg>
						                        Trip Planner
						                    </a>
						                </li>
						                <li class="nav-item mr-2" role="presentation">
						                    <a id="nTab" class="nav-link p-md-3" data-toggle="tab" href="#nextrip" role="tab" aria-controls="nextrip" aria-selected="true">
						                        <svg class="icon icon-nextrip-color mx-auto active"><use xlink:href="symbol-defs.svg#icon-nextrip-color"></use></svg>
						                        <svg class="icon icon-nextrip-white mx-auto inactive"><use xlink:href="symbol-defs.svg#icon-nextrip-white"></use></svg>
						                        NexTrip
						                    </a>
						                </li>
						                <li class="nav-item" role="presentation">
						                    <a id="aTab" class="nav-link p-md-3" data-toggle="tab" href="#alerts" role="tab" aria-controls="alerts" aria-selected="true">
						                        <svg class="icon icon-alerts-color mx-auto active"><use xlink:href="symbol-defs.svg#icon-alerts-color"></use></svg>
						                        <svg class="icon icon-alerts-white mx-auto inactive"><use xlink:href="symbol-defs.svg#icon-alerts-white"></use></svg>
						                        Alerts
						                    </a>
						                </li>
						            </ul>
						            <div class="tab-content">
										<div id="tripPlanner" class="tab-pane fade show active" role="tabpanel" aria-labelledby="tripPlannerTab">
						                	<partial src="./partials/trip-planner/trip-planner-module.html" />
										</div>
										<div id="nextrip" class="tt-nextrip tab-pane fade" role="tabpanel" aria-labelledby="nextripTab">
						                	<partial src="./partials/nextrip/nextrip-module.html" />
										</div>
										<div id="alerts" class="tt-alerts tab-pane fade" role="tabpanel" aria-labelledby="alertsTab">
						                	<partial src="./partials/alerts/alerts-module.html"  />
										</div>
						            </div>
						        </div>
						    </div>
						</div>
					</div>
				</main>
				<section class="section">
				    <div class="container">
				        <div id="howToRide" class="text-center mx-auto">
							<div class="icon-wrapper">
			            		<svg class="icon icon-circle-blue-outline-question"><use xlink:href="symbol-defs.svg#icon-circle-blue-outline-question"></use></svg>
							</div>
			            	<a href="how-to-ride-guide" class="btn btn-outline-primary">How to ride
								<svg class="icon icon-arrow-right-blue inactive"><use xlink:href="symbol-defs.svg#icon-arrow-right-blue"></use></svg>
								<svg class="icon icon-arrow-right-white active"><use xlink:href="symbol-defs.svg#icon-arrow-right-white"></use></svg>
							</a>
						</div>
				    </div>
				</section>
				<section class="section">
					<div class="container">
						<partial src="./partials/news.html" />
					</div>
				</section>
			</div>
		</div>
	</section>
	<!-- End Main Content -->

	<!-- Begin Footer -->
	<partial src="partials/footer.html" />
	<!-- End Footer -->

	<!-- build:js js/app.min.js -->
	<script src="js/jquery.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/jquery.exlink.js"></script>
	<script src="js/svgxuse.js"></script>
	<script src="js/scripts.js"></script>
	<!-- endbuild -->
</body>

</html>
