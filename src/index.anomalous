<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Metro Transit - Website Design Guide</title>
	<link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
	<link href="https://use.typekit.net/tev0qmq.css" />
	<!-- build:css css/app.min.css -->
	<link rel="stylesheet" href="css/app.css" />
	<!-- endbuild -->
</head>

<body>

	<!-- Begin Header -->
	<partial src="partials/header.html" />
	<!-- End Header -->

	<!-- Begin Main Content -->
	<section id="mainContent">
		<div id="home">
			<div class="hero-bg pt-3 pt-md-0 pt-lg-3">
				<div class="container">
					<div id="findSchedulesByRoute" class="d-none d-md-block">
						<div class="row justify-content-md-center">
							<div class="col-md-8 col-lg-6 mt-2 mt-md-4">
								<div class="input-group">
									<input type="search" id="schedulesByRoute" class="form-control form-control-lg"
										placeholder="Find schedules by route" aria-label="Find schedules by route"
										aria-describedby="searchButton" />
									<div class="input-group-append">
										<button id="searchButton" type="search" class="btn btn-primary">
											<span class="sr-only">Search</span>
											<svg class="icon icon-search-gray"><use xlink:href="symbol-defs.svg#icon-search-gray"></use></svg>
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="cta-link-white mt-md-2 mt-xl-4">
						<a class="d-inline-flex nav-link" href="schedules-maps">View all Schedules &amp; Maps</a>
						<svg class="icon icon-arrow-right-white"><use xlink:href="symbol-defs.svg#icon-arrow-right-white"></use></svg>
					</div>
				</div>
			</div>
			<div id="homeContent">
				<main class="section pt-0 pb-4 pb-md-5">
					<div class="container">
						<div id="tripToolsTabs" class="trip-tools-tabs">
							<div class="card">
								<div class="tabs">
									<ul class="nav nav-tabs" role="tab-list">
										<li class="nav-item mr-2" role="presentation">
											<a class="nav-link active p-md-3" href="#tripPlanner" role="tab"
												aria-selected="true" aria-setsize="3" aria-posinset="1">
												<svg class="icon icon-trip-planner-color active"><use xlink:href="symbol-defs.svg#icon-trip-planner-color"></use></svg>
												<svg class="icon icon-trip-planner-white inactive"><use xlink:href="symbol-defs.svg#icon-trip-planner-white"></use></svg>
												Trip Planner
											</a>
										</li>
										<li class="nav-item mr-2" role="presentation">
											<a class="nav-link p-md-3" tabindex="-1" href="#nextrip" role="tab"
												aria-selected="false" aria-setsize="3" aria-posinset="2">NexTrip</a>
										</li>
										<li class="nav-item" role="presentation">
											<a class="nav-link p-md-3" tabindex="-1" href="#alerts" role="tab"
												aria-selected="false" aria-setsize="3" aria-posinset="3">Alerts</a>
										</li>
									</ul>
									<div class="tab-content">
										<partial src="partials/trip-planner.html" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</main>
			</div>
		</div>
	</section>
	<!-- End Main Content -->

	<!-- Begin Footer -->
	<partial src="partials/footer.html" />
	<!-- End Footer -->

	<!-- build:js js/app.min.js -->
	<script src="js/jquery.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/jquery.exlink.js"></script>
	<script src="js/svgxuse.js"></script>
	<script src="js/svg.js"></script>
	<!-- endbuild -->
</body>

</html>
