<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Metro Transit - Website Design Guide</title>
	<link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
	<!-- build:css app.min.css -->
	<link rel="stylesheet" href="app.css">
	<!-- endbuild -->
</head>

<body>

	<!-- Begin Header -->
	<partial src="partials/header.html" />
	<!-- End Header -->

	<!-- Begin Main Content -->
	<section id="mainContent">
		<div id="homePage">
			<div class="hero-bg pt-3 pt-md-0 pt-lg-3">
				<div class="container">
					<div id="findSchedulesByRoute" class="d-none d-md-block">
						<div class="row justify-content-md-center">
							<div class="col-md-8 col-lg-6 mt-2 mt-md-5">
								<div class="input-group">
									<input type="search" id="schedulesByRoute" class="form-control form-control-lg"
										placeholder="Find schedules by route" aria-label="Find schedules by route"
										aria-describedby="searchRoutesButton">
										<label for="stopNumber" class="sr-only">Enter stop number</label>
									<div class="input-group-append">
										<button id="searchRoutesButton" type="search" class="btn btn-primary">
											<span class="sr-only">Search button</span>
											<img class="icon" src="/img/svg/search-gray.svg">
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="cta-link-white mt-md-2 mt-xl-4">
						<a class="d-inline-flex nav-link" href="schedules-maps">
							<span class="link-text">View all Schedules &amp; Maps</span>
							<img class="icon" src="/img/svg/arrow-right-white.svg">
						</a>
					</div>
				</div>
			</div>
			<div id="homeContent">
				<main class="section pt-0 pb-4 pb-md-5">
					<div class="container">
						<!-- Start trip tools tabs -->
						<partial src="partials/trip-tools-tabs.html" />
					</div>
				</main>
				<section class="section">
				    <div class="container">
				        <div id="howToRide" class="text-center mx-auto">
							<div class="icon-wrapper">
			            		<img class="icon" src="/img/svg/circle-blue-outline-question.svg">
							</div>
			            	<a href="/how-to-ride-guide" class="btn btn-outline-primary">How to ride
								<img class="icon inactive" src="/img/svg/arrow-right-blue.svg">
								<img class="icon active" src="/img/svg/arrow-right-white.svg">
							</a>
						</div>
				    </div>
				</section>
				<section class="section">
					<div class="container">
						<partial src="partials/news.html" />
					</div>
				</section>
			</div>
		</div>
	</section>
	<!-- End Main Content -->

	<!-- Begin Footer -->
	<partial src="partials/footer.html" />
	<!-- End Footer -->

	<!-- Vendor scripts -->
	<partial src="partials/vendor-scripts.html" />
	<!-- End vendor scripts -->
	<!-- build:js js/app.min.js -->
	<script src="js/scripts.js"></script>
	<!-- endbuild -->
</body>

</html>
